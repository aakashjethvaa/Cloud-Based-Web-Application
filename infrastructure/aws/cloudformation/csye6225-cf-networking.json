{
  "AWSTemplateFormatVersion" : "2010-09-09",
  "Description" : "Cloud Formation Template", 
 
  "Resources" : {
    "TVPC" : {
	    "Type" : "AWS::EC2::VPC",
	    "Properties" : {
	        "CidrBlock" : "10.0.0.0/16",
	        "Tags" : [ 
			{
				"Key" : "Name", 
				"Value" : "TVPC" 
			} 
			]
	      }
	    },
		
	"PubSN1" : {
	    "Type" : "AWS::EC2::Subnet",
	    "Properties" : {
 	        "AvailabilityZone" : "us-east-1a",
	        "VpcId" : { "Ref" : "TVPC" },
	        "CidrBlock" : "10.0.1.0/24",
		"MapPublicIpOnLaunch" : true,
	        "Tags" : [ {"Key" : "Name", "Value" : "PubSN1" } ]
	      }
	    },
		
	"PubSN2" : {
	    "Type" : "AWS::EC2::Subnet",
	    "Properties" : {
		"AvailabilityZone" : "us-east-1b",
	        "VpcId" : { "Ref" : "TVPC" },
	        "CidrBlock" : "10.0.2.0/24",
		"MapPublicIpOnLaunch" : true,
	        "Tags" : [ {"Key" : "Name", "Value" : "PubSN2" } ]
	      }
	    },	
		
	"MyPublicSubnet3" : {
	    "Type" : "AWS::EC2::Subnet",
	    "Properties" : {
		"AvailabilityZone" : "us-east-1c",
	        "VpcId" : { "Ref" : "TVPC" },
	        "CidrBlock" : "10.0.3.0/24",
		"MapPublicIpOnLaunch" : true,
	        "Tags" : [ {"Key" : "Name", "Value" : "PubSN3" } ]
	      }
	    },	
	
	"PvtSN1" : {
	    "Type" : "AWS::EC2::Subnet",
	    "Properties" : {
		"AvailabilityZone" : "us-east-1a",
	        "VpcId" : { "Ref" : "TVPC" },
	        "CidrBlock" : "10.0.4.0/24",
		"MapPublicIpOnLaunch" : false,
	        "Tags" : [ {"Key" : "Name", "Value" : "PvtSN1" } ]
	      }
	    },
	
	"PvtSN2" : {
	    "Type" : "AWS::EC2::Subnet",
	    "Properties" : {
		"AvailabilityZone" : "us-east-1b",
	        "VpcId" : { "Ref" : "TVPC" },
	        "CidrBlock" : "10.0.5.0/24",
		"MapPublicIpOnLaunch" : false,
	        "Tags" : [ {"Key" : "Name", "Value" : "PvtSN2" } ]
	      }
	    },
		
	"PvtSN3" : {
	    "Type" : "AWS::EC2::Subnet",
	    "Properties" : {
		"AvailabilityZone" : "us-east-1c",
	        "VpcId" : { "Ref" : "TVPC" },
	        "CidrBlock" : "10.0.6.0/24",
		"MapPublicIpOnLaunch" : false,
	        "Tags" : [ {"Key" : "Name", "Value" : "PvtSN3" } ]
	      }
	    },
			"DBSubnetGroup" : {
        "Type" : "AWS::RDS::DBSubnetGroup",
        "Properties" : {
           "DBSubnetGroupDescription" : "DB Subnet Group",
           "DBSubnetGroupName" : {"Fn::Join" : ["",["csye6225-db-subnetgroup"]] },
           "SubnetIds" : [ {"Ref" : "PubSN1"},{"Ref" : "PubSN2"}]
     
        }
     },
	"MIGY" : {
	      "Type" : "AWS::EC2::InternetGateway",
	      "Properties" : {
	        "Tags" : [ {"Key" : "Name", "Value" : "MIGY" } ]
	      }
	    },
		
	"AttachGateway" : {
	       "Type" : "AWS::EC2::VPCGatewayAttachment",
	       "Properties" : {
	         "VpcId" : { "Ref" : "TVPC" },
	         "InternetGatewayId" : { "Ref" : "MIGY" }
	       }
	    },
		
	"MRouteTable" : {
	      "Type" : "AWS::EC2::RouteTable",
	      "Properties" : {
	        "VpcId" : {"Ref" : "TVPC"},
	        "Tags" : [ {"Key" : "Name", "Value" : "MRouteTable" } ]
	      }
	    },
		
	"myRoute" : {
         "Type" : "AWS::EC2::Route",
            "Properties" : {
            "RouteTableId" : { "Ref" : "MRouteTable" },
            "DestinationCidrBlock" : "0.0.0.0/0",
            "GatewayId" : { "Ref" : "MIGY" }
         }
			},
			"MPublicSubnetRouteTableAssociation":{
				"Type":"AWS::EC2::SubnetRouteTableAssociation",
				"Properties":{
					 "SubnetId":{
							"Ref":"PubSN1"
					 },
					 "RouteTableId":{
							"Ref":"MRouteTable"
					 }
				}
		 }
	
  }
}

